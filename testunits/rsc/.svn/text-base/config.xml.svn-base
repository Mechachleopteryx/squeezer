<?xml version="1.0" ?>
<InfSetupFile>
<config>
	<biffile name="dbn.bif" />
	<inference type="gibbs" epsilon="0.5" maxIter="1000000" burnIn="5000" nbrDrawnBySample="0" periodeSize="500" verbosity="1" minEpsilonRate="3"/>
</config>
<scenario>
	<epochs upto="10" />
	<context name="tmp">
		<instance start="2" end="3" value="froid"/>
		<instance start="6" end="9" value="chaud"/>
	</context>
	<follow>
		<variable name="X"/>
		<variable name="Y"/>
	</follow>
	<evidences>
		<epoch t="6">
			<softevidence variable="X">
        			<modality name="A" value="0.5"/>
      			</softevidence>
      			<intervention variable="Y" modality="k"/>
		</epoch>
		<epoch t="1">
			<hardevidence variable="X" modality="B"/>
		</epoch>
		<epoch t="3">
			<intervention variable="X" modality="B"/>
		</epoch>
		
	</evidences>
</scenario>
</InfSetupFile>
